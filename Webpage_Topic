#read a web page and process the text
import urllib.request
response = urllib.request.urlopen('https://en.wikipedia.org/wiki/Natural_language_processing')
html = response.read()
print(html)
from bs4 import BeautifulSoup
soup = BeautifulSoup(html, 'html5lib')
text = soup.get_text(strip = True)
print(text)
#tokenization
tokens = [t for t in text.split()]
print(tokens)
import nltk
#clean up the stop words
from nltk.corpus import stopwords
sr = stopwords.words('english')
clean_tokens = tokens[:]
for token in tokens:
    if token in stopwords.words('english'):
        clean_tokens.remove(token)
#sort out the most frequent words
freq = nltk.FreqDist(clean_tokens)
for key, val in freq.items():
    print(str(key) + ':' + str(val))
#plot the frequency of key words    
freq.plot(20, cumulative = False)
